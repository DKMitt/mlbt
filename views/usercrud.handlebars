<div class="container">
	
	
	<div class="row">
		<div class="col-sm-7">
			<br>
			<img src="./images/logo.jpg" alt="Mini Library Book App">
		</div>
		<div class="col-sm-5">
			<h1>Mini Library Book App</h1>
			<p>by Team Book Slingers</p>
			<p class="right"><a href="/admin">Admin</a>  |  <a href="/usercrud">Activity</a>  |  <a href="/crud">Add Books<a/>  |  <a href="/checkout">Checkout Book</a></p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-2">
		</div>
	</div>
	<div class=""><h2>Checkout List</h2>
		<br>
		<div class="col-sm-8">
			<div class="container scroll">
				<table class="table table-hover table-nonfluid">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>User NetID</th>
							<th>book ID</th>
							<th>Checkout</th>
							<th>Due Date</th>
						</tr>
					</thead>
					<tbody class="">
						{{#each checkout}}
						<tr tabindex="1">
							<td>{{this.name}}</td>
							<td>{{this.email}}</td>
							<td>{{this.netID}}</td>
							<td>{{this.book_id}}</td>
							<td>{{this.checkout_date}}</td>
							<td>{{this.due_date}}</td>
							<td>
								
								<form action="/{{this.id}}?_method=DELETE" method="POST" class="pull-left">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-danger btn-size" type="submit"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
								</form>
								<form action="/{{this.id}}?_method=PUT" method="POST" class="pull-right">
									<input type="hidden" name="status" value="false">
									<input type="hidden" name="id" value="{{this.id}}">
									<button class="btn btn-xs btn-success btn-size" type="submit"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
								</form>
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	
	<div class="col-sm-2">
	</div>
</div>
<BR>