<h1>MLBT</h1>

<h2>Books that are checked out</h2>

<ul>
  {{#each book}}
    {{#unless this.status}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="borrowed" value="true">
          <button type="submit">Return</button>
        </form>

        {{> books/delete-book}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Books that are available</h2>

<ul>
  {{#each books}}
    {{#if this.status}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="return" value="false">
          <button type="submit">Return Book</button>
        </form>

        {{> books/delete-book}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Book</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="search-label">Book Search:</label>
    <input type="text" id="search-title" name="title">
    <input type="text" id="search-author" name="author">
    <input type="text" id="search-isbn" name="ISBN">
  </div>

  <div class="form-group">
    <label for="book">Add a book</label><br>
    <input type="radio" name="book1" value="1" checked> Book1<br>
    <input type="delete" name="book2" value="0"> Book2
  </div>

  <button type="submit">Add Book</button>
</form>